<!DOCTYPE html>
<html>
  <head>
  </head>
  <body>
    <h1>All Blog Post</h1>
    <% @posts.each do |post| %>
      <br>
      <h2>Title</h2>
      <br>
      <%= post.name %>
      <br>
      <h2>Post</h2>
      <br>
      <%= post.content %>
      <br>
      <p>
        <a href="posts/<%= post.id %>">View Post</a> || 
        <a href="posts/<%= post.id %>/edit">Edit Post</a>
      </p>
    <% end %>    
  </body>
</html>